{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    // Отключаем или ослабляем самые проблемные правила
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",

    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-prototype-builtins": "warn",
    "no-cond-assign": "warn",
    "no-fallthrough": "warn",
    "no-constant-condition": "warn",
    "no-empty": "warn",
    "valid-typeof": "warn",
    "no-control-regex": "warn",

    // Стилистические — отключаем, чтобы не ломать CI
    "quotes": "off",
    "semi": "off",
    "no-trailing-spaces": "off",
    "indent": "off",
    "comma-dangle": "off",
    "eol-last": "off",
    "brace-style": "off",
    "arrow-parens": "off",
    "multiline-ternary": "off",
    "jsx-wrap-multilines": "off",
    "jsx-one-expression-per-line": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "tmp/**",
    "*.config.js",
    "*.min.js"
  ]
}
